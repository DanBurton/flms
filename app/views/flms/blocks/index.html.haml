- content_for :js do
  :javascript
    $(function() {
      new BlocksIndexPage();
    });

%br
%h4 Blocks on page '#{@page.url}'

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Name
      %th

  %tbody.blocks
    - @blocks.each do |block|
      %tr.ui-state-default
        %td= link_to block.name, page_block_path(@page, block)
        %td
          = link_to 'edit', edit_page_block_path(@page, block), class: 'btn'
          = link_to 'delete', page_block_path(@page, block), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'
        %td.action
          .switch.switch-mini
            %input{type: 'checkbox'}

%br

= link_to 'New Block', new_page_block_path(@page), class: 'btn btn-success'


